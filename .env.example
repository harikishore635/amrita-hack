# =============================================================================
# PensionChain Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# -----------------------------------------------------------------------------
# BLOCKCHAIN CONFIGURATION (Polygon Amoy Testnet)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_RPC_URL=https://rpc-amoy.polygon.technology

# Run: node scripts/create-wallet.js  to generate these
DEPLOYER_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE
DEPLOYER_ADDRESS=0xYOUR_WALLET_ADDRESS_HERE

# After deploying: npx hardhat run scripts/deploy.ts --network amoy
CONTRACT_ADDRESS=0xYOUR_CONTRACT_ADDRESS_HERE

# -----------------------------------------------------------------------------
# AUTH CONFIGURATION
# -----------------------------------------------------------------------------
JWT_SECRET=pensionchain-jwt-secret-2026
JWT_REFRESH_SECRET=pensionchain-refresh-secret-2026

# -----------------------------------------------------------------------------
# AI CONFIGURATION (Google Gemini)
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=PensionChain

# -----------------------------------------------------------------------------
# DEVELOPMENT FLAGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEBUG=false
