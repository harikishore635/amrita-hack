# =============================================================================
# FlashPay Environment Variables Template
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# -----------------------------------------------------------------------------
# BLOCKCHAIN CONFIGURATION
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CHAIN_ID=84532
NEXT_PUBLIC_CHAIN_NAME="Base Sepolia"
NEXT_PUBLIC_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY_HERE
NEXT_PUBLIC_BLOCKEXPLORER=https://sepolia.basescan.org

# -----------------------------------------------------------------------------
# SMART CONTRACT ADDRESSES (Person 1 fills these after deployment)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_ESCROW_ADDRESS=
NEXT_PUBLIC_HANDLE_REGISTRY_ADDRESS=

# -----------------------------------------------------------------------------
# PRIVY AUTHENTICATION (Get from: https://dashboard.privy.io)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_PRIVY_APP_ID=
PRIVY_APP_SECRET=

# -----------------------------------------------------------------------------
# PIMLICO GAS SPONSORSHIP (Get from: https://dashboard.pimlico.io)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_PIMLICO_API_KEY=
PIMLICO_BUNDLER_URL=https://api.pimlico.io/v1/base-sepolia/rpc?apikey=YOUR_PIMLICO_KEY_HERE
PIMLICO_PAYMASTER_URL=https://api.pimlico.io/v2/base-sepolia/rpc?apikey=YOUR_PIMLICO_KEY_HERE

# -----------------------------------------------------------------------------
# ALCHEMY (Alternative RPC Provider)
# Get from: https://dashboard.alchemy.com
# -----------------------------------------------------------------------------
ALCHEMY_API_KEY=
NEXT_PUBLIC_ALCHEMY_RPC_URL=https://base-sepolia.g.alchemy.com/v2/${ALCHEMY_API_KEY}

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=FlashPay
NEXT_PUBLIC_SUPPORT_EMAIL=team@flashpay.app

# -----------------------------------------------------------------------------
# WALLET CONFIGURATION (For Contract Deployment - Person 1 Only)
# KEEP THIS SECRET! Never commit to git!
# -----------------------------------------------------------------------------
DEPLOYER_PRIVATE_KEY=
DEPLOYER_ADDRESS=

# -----------------------------------------------------------------------------
# OPTIONAL: ANALYTICS & MONITORING
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_GA_MEASUREMENT_ID=
# SENTRY_DSN=

# -----------------------------------------------------------------------------
# DEVELOPMENT FLAGS
# -----------------------------------------------------------------------------
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_ENABLE_TESTNETS=true
